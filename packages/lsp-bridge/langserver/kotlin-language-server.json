{
  "name": "kotlin-language-server",
  "languageId": "kotlin",
  "command": [
    "kotlin-language-server"
  ],
  "forceInlayHint": true,
  "settings": {
    "kotlin": {
      "externalSources": {
        "autoConvertToKotlin": true,
        "useKlsScheme": true
      },
      "debugAdapter": {
        "path": "",
        "enabled": true
      },
      "completion": {
        "snippets": {
          "enabled": true
        }
      },
      "linting": {
        "debounceTime": 250
      },
      "compiler": {
        "jvm": {
          "target": "11"
        }
      },
      "trace": {
        "server": "off"
      },
      "languageServer": {
        "path": "kotlin-language-server"
      },
      "inlayHints": {
        "typeHints": true,
        "parameterHints": true,
        "chainedHints": true
      }
    }
  }
}
